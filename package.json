{
	"name": "app-template",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build": "webpack --mode=production",
		"preview": "serve --no-clipboard --single --listen 8080 dist",
		"dev": "webpack-dev-server --mode=development",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|jsx|ts|tsx)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"check-types": "tsc --project tsconfig.json",
		"validate": "concurrently -c blue,magenta,yellow,green -n \"tsc,prettier,eslint,build\" --timings \"npm run check-types\" \"npm run check-format\" \"npm run lint\" \"npm run build\"",
		"prepare": "husky install"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.22.9",
		"@babel/core": "^7.22.9",
		"@babel/preset-env": "^7.22.9",
		"@babel/preset-react": "^7.22.5",
		"@babel/preset-typescript": "^7.22.5",
		"@pmmmwh/react-refresh-webpack-plugin": "github:pmmmwh/react-refresh-webpack-plugin",
		"@testing-library/react": "^14.0.0",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"babel-loader": "^9.1.3",
		"concurrently": "^8.2.0",
		"css-loader": "^6.8.1",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^6.5.3",
		"html-webpack-plugin": "^5.5.3",
		"husky": "^8.0.3",
		"jest": "^29.6.1",
		"lint-staged": "^13.2.3",
		"mini-css-extract-plugin": "^2.7.6",
		"prettier": "^3.0.0",
		"react-refresh": "^0.14.0",
		"sass": "^1.63.6",
		"sass-loader": "^13.3.2",
		"serve": "^14.2.0",
		"style-loader": "^3.3.3",
		"typescript": "^5.1.6",
		"typescript-plugin-css-modules": "^5.0.1",
		"webpack": "^5.88.1",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
